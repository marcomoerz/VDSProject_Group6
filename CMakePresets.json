{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 19,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "generator": "Unix Makefiles",
            "warnings": {
                "dev": true,
                "deprecated": true,
                "systemVars": true,
                "unusedCli": true,
                "uninitialized": true
            }
        },
        {
            "name": "debug",
            "description": "Debug build",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CLASSPROJECT_COVERAGE": "OFF",
                "CLASSPROJECT_VISUALIZE": "ON",
                "CLASSPROJECT_GRAPHVIZ": "ON",
                "CLASSPROJECT_TESTS": "ON",
                "CLASSPROJECT_BENCHMARKS": "OFF"
            }
        },
        {
            "name": "release",
            "description": "Release build",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "benchmark",
            "description": "Benchmark build",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CLASSPROJECT_COVERAGE": "OFF",
                "CLASSPROJECT_VISUALIZE": "OFF",
                "CLASSPROJECT_GRAPHVIZ": "OFF",
                "CLASSPROJECT_TESTS": "OFF",
                "CLASSPROJECT_BENCHMARKS": "ON"
            }
        },
        {
            "name": "relwithdebinfo",
            "description": "Release build with debug info",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "coverage",
            "description": "Coverage build",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CLASSPROJECT_COVERAGE": "ON",
                "CLASSPROJECT_VISUALIZE": "ON",
                "CLASSPROJECT_TESTS": "ON",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "ci",
            "description": "Continuous integration build",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CLASSPROJECT_COVERAGE": "ON",
                "CLASSPROJECT_VISUALIZE": "ON",
                "CLASSPROJECT_GRAPHVIZ": "OFF",
                "CLASSPROJECT_TESTS": "ON",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "coverage",
            "description": "",
            "displayName": "",
            "configurePreset": "coverage",
            "targets": [
                "VDSProject",
                "VDSProject_test",
                "coverage"
            ]
        }
    ]
}